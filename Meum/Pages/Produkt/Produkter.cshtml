@page
@model Meum.Pages.ProdukterModel
@{
}
<head>
    <style>
        .oversigt {
            background: #F5ECDB;
            padding: 15px;
            color: #F5ECDB
        }
    </style>
</head>
<h3>Tilgængelige Produkter</h3>
<div class="oversigt">
    <h4><a href="TilføjProdukt">+ Tilføj Nyt Produkt<a /></h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Vare ID
                </th>
                <th>
                    Navn
                </th>
                <th>
                    Beskrivelse
                </th>
                <th>
                    Pris
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProduktList)
            {
                <tr>
                    <td>
                        @item.ProduktId
                    </td>
                    <td>
                        @item.Navn
                    </td>
                    <td>
                        @item.Beskrivelse
                    </td>
                    <td>
                        @item.Pris Kr
                    </td>
                    <td>
                        <a href="SletProdukt/@item.ProduktId">Slet<a />

                        <a href="UpdaterProdukt/@item.ProduktId">Opdater<a />
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>