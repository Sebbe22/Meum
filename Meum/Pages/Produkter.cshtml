@page
@model Meum.Pages.ProdukterModel
@{
}

<h3>Liste af alle Produkter:</h3>
<h4><a href="/TilføjProdukt">+ Tilføj nyt Produkt<a /></h4>
<table class="table">
    <thead>
        <tr>
            <th>
                Vare ID
            </th>
            <th>
                Navn
            </th>
            <th>
                Beskrivelse
            </th>
            <th>
                Pris
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProduktList)
        {
            <tr>
                <td>
                    @item.ProduktId
                </td>
                <td>
                    @item.Navn
                </td>
                <td>
                    @item.Beskrivelse
                </td>
                <td>
                    @item.Pris Kr
                </td>
                <td>
                    @*<a class="btn" type="button" asp-page="SletKunde" asp-route-Tlf="@item.TlfNummer"></a>*@
                    <a href="SletProdukt/@item.ProduktId">Delete<a />
                </td>
            </tr>

        }
    </tbody>
</table>